<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/operationRappro"
>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing" android:id="@+id/cardViewRappro">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/cb" android:id="@+id/txtMoyPay"/>
                <TextView
                        android:text="@string/uber_eats"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtTiersOpe"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="26/01/2020"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_height="wrap_content" android:id="@+id/txtDateOpe"/>
                <TextView
                        android:text="True"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtRapprOpe"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:text="-45,00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:id="@+id/txtSommeOpe"
                android:layout_gravity="right"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>